# コスト最適化メール環境変数設定

# 優先順位付き複数サービス設定
# 1. Resend (最優先: 3,000通/月無料)
RESEND_API_KEY=your_resend_api_key_here

# 2. SendGrid (第2優先: 100通/日無料)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# 3. AWS SES (第3優先: 62,000通/月無料)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# 共通設定
FROM_EMAIL=noreply@yourdomain.com

# KVネームスペース（使用量トラッキング用）
EMAIL_USAGE_KV=your_kv_namespace_id

# フォールバック設定
# すべての無料枠を使い切った場合の支払い上限
MONTHLY_SPENDING_LIMIT=1000  # $10/月
PAID_SERVICE_THRESHOLD=62000  # 無料枠合計値