{
  "name": "question-creator",
  "version": "1.0.0",
  "description": "Mobile-optimized question creation tool with R2 storage",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o ./public/css/style.css",
    "build:js": "esbuild ./src/js/app.js --bundle --outfile=public/js/bundle.js --minify",
    "watch": "concurrently \"npm run build:css -- --watch\" \"npm run build:js -- --watch\""
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.8",
    "katex": "^0.16.9",
    "tailwindcss": "^3.3.6",
    "wrangler": "^3.22.1"
  },
  "dependencies": {
    "idb": "^7.1.1",
    "js-yaml": "^4.1.0",
    "marked": "^9.1.6"
  }
}