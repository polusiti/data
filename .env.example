# Data Manager Authentication Configuration
# Copy this file to .env and fill in your actual values

# Cloudflare Worker Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# D1 Database Configuration
DB_ID=your_d1_database_id_here
DB_NAME=data-manager-auth-db

# R2 Storage Configuration (Optional)
R2_BUCKET_NAME=data-manager-media
R2_ACCESS_KEY_ID=your_r2_access_key_here
R2_SECRET_ACCESS_KEY=your_r2_secret_key_here

# Authentication Configuration
ADMIN_TOKEN=your_secure_admin_token_here
SESSION_SECRET=your_session_secret_here

# WebAuthn Configuration
WEBAUTHN_RP_NAME="Data Manager"
WEBAUTHN_RP_ID=your-domain.com
WEBAUTHN_ORIGIN=https://your-domain.com

# Security Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://data-manager.pages.dev
CORS_ENABLED=true
SESSION_TIMEOUT_HOURS=24

# Development Configuration
NODE_ENV=production
DEBUG=false

# Optional: Analytics and Monitoring
ANALYTICS_ENABLED=true
LOG_LEVEL=info

# Database Migration Settings
AUTO_MIGRATE=false
MIGRATION_MODE=safe